<h1>Listing games</h1>
<%= current_user.email %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Developer</th>
      <th>Genre</th>
      <th>Rating</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td>
          <%= game.name %>
        </td>
        <td>
          <%= game.developer %>
        </td>
        <td>
          <%= game.genre %>
        </td>
        <td>
          <%= game.rating %>
        </td>
        <td>
          <%= link_to 'Show', game %>
        </td>
        <td>
          <%= link_to 'Edit', edit_game_path(game) %>
        </td>
        <td>
          <%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= link_to 'New Game', new_game_path %>
