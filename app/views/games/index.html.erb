<div class='container'>
  <div class='jumbotron'>
<h1>Your Game List </h1>
<table style="border-spacing: 15px;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Developer</th>
      <th>Genre</th>
      <th>Rating</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <% if game.user_id == current_user.id %>
      <tr>
        <td>
          <%= game.name %>
        </td>
        <td>
          <%= game.developer %>
        </td>
        <td>
          <%= game.genre %>
        </td>
        <td>
          <%= game.rating %>
        </td>
        <td>
          <%= link_to 'View', game %>
        </td>
        <td>
          <%= link_to 'Edit', edit_game_path(game) %>
        </td>
        <td>
          <%= link_to 'Remove', game, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>


    <% end %>
  </tbody>
</table>
<br/>
<%= link_to 'New Game', new_game_path %>
</div>
</div>
